CompileFlags:
    Add:
        - "-std=c++20"
        - "--include-directory=./include"
        - "-I/opt/openmpi/include"
        - "-I/home/dropbit/fastflow"
    Compiler: /opt/openmpi/bin/mpicxx

Index:
    Background: Build

Diagnostics:
    ClangTidy:
        Add: []
        Remove: []
    UnusedIncludes: Strict

InlayHints:
    Enabled: Yes
    ParameterNames: Yes
    DeducedTypes: Yes

Hover:
    ShowAKA: Yes
